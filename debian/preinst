set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# Create nagios user and nagcmd group, add user to group
create_user() {
  # Add the groups we need if they're not there
  # Do we have a nagios group?
  group_check="`getent group nagios`"
  if [ -z "$group_check" ]; then
    addgroup --system nagios
  fi

  # A nagcmd group?
  group_check="`getent group nagcmd`"
  if [ -z "$group_check" ]; then
    addgroup --system nagcmd
  fi

  # If no existing user, create
  if ! id nagios >/dev/null 2>&1; then
    adduser --system --group --home /var/log/nagios --shell /bin/bash --quiet nagios
  fi

  # Nagios user doesn't have a home dir?  At some point we should
  # probably make this a question for the user - where should we
  # create the home dir...  At the moment we use /home/nagios
  if ! [ -d ~nagios ]; then
    usermod -d /var/log/nagios nagios
    mkdir -p /var/log/nagios
    chown nagios.nagios /var/log/nagios
  fi

  usermod -g nagios nagios || true
  usermod -G nagcmd nagios || true

  # Add this for Nagvis
  usermod -aG nagcmd www-data || true
}

copy_files() {
    dir=$1
    for icon in $dir/*; do
        test -f $icon || continue
        echo $icon | grep copy 1>/dev/null && continue
        test -f $icon.copy || ln $icon $icon.copy
    done
}

install_or_upgrade() {
    # Need to have something here
    true
}

case "$1" in
    install)
        # Note: user should have been created by opsview-base already
        # as that should always get installed first
        install_or_upgrade
    ;;

    upgrade)
        # For import_runtime
        touch /usr/local/nagios/var/upgrade.lock
        install_or_upgrade
    ;;

    configure)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

